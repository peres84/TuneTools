# =============================================================================
# TUNETOOLS ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# RUNPOD CONFIGURATION (Required for song generation)
# =============================================================================
# Get from: https://runpod.io/console/user/settings
RUNPOD_API_KEY = "xxxxxxxxxxxxx"
# Get from: RunPod Console → Serverless → Your Endpoint → Endpoint ID
ENDPOINT_ID = "xxxxxxxxxxxxxx"

# =============================================================================
# WEATHER API (Required for weather context)
# =============================================================================
# Get from: https://openweathermap.org/api (Free tier available)
OPENWEATHER_API_KEY = "xxxxxxxxxxxxx"

# =============================================================================
# NEWS APIs (Required for news aggregation - uses fallback system)
# =============================================================================
# Primary: Get from https://serpapi.com/manage-api-key (100 free searches/month)
SERPAPI_API_KEY = "xxxxxxxxxxxxx"
# Fallback 1: Get from https://newsapi.org/account (100 requests/day free)
NEWSAPI_API_KEY = "xxxxxxxxxxxxx"
# Fallback 2: Get from https://worldnewsapi.com/account (1000 requests/day free)
WORLDNEWS_API_KEY = "xxxxxxxxxxxxx"

# =============================================================================
# GOOGLE CALENDAR OAUTH (Optional - for calendar integration)
# =============================================================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLOUD_API_KEY = "your_google_cloud_api_key_here"
GOOGLE_CLIENT_ID = "your_google_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET = "your_google_client_secret"
# Development: http://localhost:8000/api/calendar/callback
# Production: https://your-backend.onrender.com/api/calendar/callback
GOOGLE_REDIRECT_URI = "http://localhost:8000/api/calendar/callback"

# =============================================================================
# SUPABASE CONFIGURATION (Required for database and auth)
# =============================================================================
# Get all from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_PROJECT_ID = "xxxxxxxxx"
SUPABASE_URL = "https://your-project.supabase.co"
# Anon Key: Used by frontend (public, safe to expose)
SUPABASE_ANON_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
# Service Role Key: Used by backend (KEEP SECRET! Bypasses RLS)
SUPABASE_SERVICE_ROLE_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
# JWT Secret: Get from Dashboard → Settings → API → JWT Settings (NOT a JWT token!)
SUPABASE_JWT_SECRET = "your-super-secret-jwt-signing-key-here"

# =============================================================================
# CORS CONFIGURATION (Required for frontend-backend communication)
# =============================================================================
# Development: http://localhost:5173
# Production: https://your-app.vercel.app (change when deploying!)
FRONTEND_URL = "http://localhost:5173"

# =============================================================================
# LLM APIs (Required for lyrics and genre generation)
# =============================================================================
# Primary: Get from https://platform.openai.com/api-keys
OPENAI_API_KEY = "sk-xxxxxxxxxxxxx"
# Fallback: Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY = "xxxxxxxxxxxxx"
