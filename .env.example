# =============================================================================
# TUNETOOLS ENVIRONMENT VARIABLES - DOCUMENTATION
# This file documents all environment variables used across the project
# Frontend and Backend have their own .env files in their respective directories
# =============================================================================

# =============================================================================
# FRONTEND VARIABLES (src/frontend/.env)
# Note: Vite requires VITE_ prefix for all environment variables
# =============================================================================

# Supabase Configuration (Frontend uses ANON key only)
VITE_SUPABASE_URL = "https://your-project.supabase.co"
VITE_SUPABASE_ANON_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."

# Backend API URL
VITE_API_BASE_URL = "http://localhost:8000"
# Development: http://localhost:8000
# Production: https://backend-name.onrender.com (change when deploying!)

# =============================================================================
# BACKEND VARIABLES (src/backend/.env)
# Note: Backend does NOT use VITE_ prefix
# =============================================================================

# Supabase Configuration (Backend uses SERVICE_ROLE key and JWT secret)
SUPABASE_URL = "https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY = "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
SUPABASE_JWT_SECRET = "your-super-secret-jwt-signing-key"
SUPABASE_PROJECT_ID = "xxxxxxxxx"

# CORS Configuration
FRONTEND_URL = "http://localhost:5173"
# Development: http://localhost:5173
# Production: https://your-app.vercel.app (change when deploying!)

# RunPod Credentials
RUNPOD_API_KEY = "xxxxxxxxxxxxx"
ENDPOINT_ID = "xxxxxxxxxxxxxx"

# OpenWeather API Key
OPENWEATHER_API_KEY = "xxxxxxxxxxxxx"

# News API Keys (for fallback)
SERPAPI_API_KEY = "xxxxxxxxxxxxx"
NEWSAPI_API_KEY = "xxxxxxxxxxxxx"
WORLDNEWS_API_KEY = "xxxxxxxxxxxxx"

# Google Calendar OAuth
GOOGLE_CLOUD_API_KEY = "your_google_cloud_api_key"
GOOGLE_CLIENT_ID = "your_client_id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET = "your_client_secret"
GOOGLE_REDIRECT_URI = "http://localhost:8000/api/calendar/callback"

# LLM API Keys
OPENAI_API_KEY = "sk-xxxxxxxxxxxxx"
GEMINI_API_KEY = "xxxxxxxxxxxxx"

#------------------------
# Where to get API keys:
# - Supabase: https://supabase.com/dashboard/project/_/settings/api
# - RunPod: https://www.runpod.io/console/user/settings
# - OpenWeather: https://home.openweathermap.org/api_keys
# - SerpAPI: https://serpapi.com/manage-api-key
# - NewsAPI: https://newsapi.org/account
# - WorldNews: https://worldnewsapi.com/account
# - Google Cloud: https://console.cloud.google.com/apis/credentials
# - OpenAI: https://platform.openai.com/api-keys
# - Gemini: https://aistudio.google.com/app/apikey

#------------------------
# IMPORTANT NOTES:
#------------------------
# 1. Frontend variables MUST have VITE_ prefix (Vite requirement)
# 2. Backend variables do NOT use VITE_ prefix
# 3. Supabase ANON key is safe for frontend (public)
# 4. Supabase SERVICE_ROLE key is ONLY for backend (bypasses RLS)
# 5. Frontend: src/frontend/.env
# 6. Backend: src/backend/.env
