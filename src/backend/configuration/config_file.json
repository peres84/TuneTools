{
    "app": {
        "title": "TuneTools API",
        "description": "AI-powered daily song generation platform",
        "version": "1.0.0"
    },
    "logging": {
        "logging_level": "debug",
        "dir_name": "logs",
        "log_file_name": "tunetools"
    },
    "network": {
        "uvicorn_app_reference": "main:app",
        "server_port": 8000,
        "host": "0.0.0.0",
        "reload": false,
        "workers": 1,
        "proxy_headers": true
    },
    "endpoints": {
        "root_directory_endpoint": {
            "request_limit": 25,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "",
            "endpoint_tag": "root",
            "endpoint_route": "/"
        },
        "user_check_email_endpoint": {
            "request_limit": 5,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/user",
            "endpoint_tag": "user",
            "endpoint_route": "/check-email"
        },
        "user_profile_endpoint": {
            "request_limit": 10,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/user",
            "endpoint_tag": "user",
            "endpoint_route": "/profile"
        },
        "user_preferences_get_endpoint": {
            "request_limit": 10,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/user",
            "endpoint_tag": "user",
            "endpoint_route": "/preferences"
        },
        "user_preferences_update_endpoint": {
            "request_limit": 5,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/user",
            "endpoint_tag": "user",
            "endpoint_route": "/preferences"
        },
        "user_preferences_create_endpoint": {
            "request_limit": 3,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/user",
            "endpoint_tag": "user",
            "endpoint_route": "/preferences"
        },
        "songs_generate_endpoint": {
            "request_limit": 3,
            "unit_of_time_for_limit": "hour",
            "endpoint_prefix": "/api/songs",
            "endpoint_tag": "songs",
            "endpoint_route": "/generate"
        },
        "songs_list_endpoint": {
            "request_limit": 15,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/songs",
            "endpoint_tag": "songs",
            "endpoint_route": "/list"
        },
        "songs_today_endpoint": {
            "request_limit": 10,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/songs",
            "endpoint_tag": "songs",
            "endpoint_route": "/today"
        },
        "songs_get_endpoint": {
            "request_limit": 15,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/songs",
            "endpoint_tag": "songs",
            "endpoint_route": "/{song_id}"
        },
        "albums_list_endpoint": {
            "request_limit": 15,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/albums",
            "endpoint_tag": "albums",
            "endpoint_route": "/list"
        },
        "albums_current_endpoint": {
            "request_limit": 10,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/albums",
            "endpoint_tag": "albums",
            "endpoint_route": "/current"
        },
        "albums_get_endpoint": {
            "request_limit": 15,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/albums",
            "endpoint_tag": "albums",
            "endpoint_route": "/{album_id}"
        },
        "share_get_endpoint": {
            "request_limit": 50,
            "unit_of_time_for_limit": "minute",
            "endpoint_prefix": "/api/share",
            "endpoint_tag": "share",
            "endpoint_route": "/{share_token}"
        }
    },
    "llm": {
        "primary_provider": "openai",
        "fallback_provider": "gemini",
        "openai_model": "gpt-4o-mini",
        "gemini_model": "gemini-2.0-flash",
        "temperature": 0.8,
        "max_tokens": 1500
    },
    "image_generation": {
        "primary_provider": "gemini",
        "fallback_provider": "openai",
        "gemini_model": "gemini-2.5-flash-image",
        "openai_model": "dall-e-3",
        "image_size": "1024x1024",
        "note": "Gemini 2.5 Flash Image is primary. OpenAI DALL-E is fallback. If both fail, uses default assets."
    },
    "song_generation": {
        "runpod_timeout_seconds": 900,
        "max_retries": 3,
        "daily_limit_per_user": 3
    },
    "news": {
        "primary_api": "serpapi",
        "fallback_apis": ["newsapi", "worldnews"],
        "preferred_articles_count": 7,
        "general_articles_count": 3,
        "cache_ttl_seconds": 3600
    },
    "weather": {
        "default_location": "New York",
        "cache_ttl_seconds": 1800
    },
    "albums": {
        "songs_per_album": 7,
        "week_start_day": "monday"
    }
}
