[MASTER]
ignore=venv,.venv,migrations,logs,__pycache__
jobs=4
persistent=no

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    duplicate-code,
    redefined-outer-name,
    import-error,
    no-name-in-module,
    logging-fstring-interpolation,
    no-member,
    broad-except,
    fixme,
    line-too-long

[REPORTS]
output-format=colorized
reports=no
score=yes

[FORMAT]
max-line-length=120
indent-string='    '
ignore-long-lines=^\s*(# )?<?https?://\S+>?$

[BASIC]
good-names=i,j,k,ex,Run,_,id,db,app
bad-names=foo,bar,baz
docstring-min-length=10

[TYPECHECK]
ignored-modules=uvicorn,fastapi,starlette,supabase,runpod,openai,google
generated-members=request.*,response.*,data.*

[LOGGING]
logging-modules=logging,utils.custom_logger

[DESIGN]
max-args=7
max-locals=25
max-returns=6
max-branches=15
max-statements=60

[IMPORTS]
known-third-party=fastapi,uvicorn,supabase,runpod,openai,google,slowapi,pydantic,redis
known-standard-library=sys,os,typing,logging,json,datetime,asyncio
known-first-party=api,models,services,utils,db,configuration

[VARIABLES]
dummy-variables-rgx=^(_|unused_.*|dummy)$
init-import=no

[SIMILARITIES]
min-similarity-lines=10
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes
